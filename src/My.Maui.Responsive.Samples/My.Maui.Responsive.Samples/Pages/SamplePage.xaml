<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:r="clr-namespace:My.Maui.Responsive;assembly=My.Maui.Responsive"
             xmlns:vm="clr-namespace:My.Maui.Responsive.Samples.ViewModels"
             x:Class="My.Maui.Responsive.Samples.Pages.SamplePage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             BindingContext="{x:Static vm:ViewModelLocator.SamplesPage}">

    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <ListView ItemsSource="{Binding Options}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Button Text="{Binding Title}" Command="{Binding OnSelected}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>
