<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:r="clr-namespace:My.Maui.Responsive;assembly=My.Maui.Responsive"
             x:Class="My.Maui.Responsive.Samples.Pages.OrderPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <r:Container>
            <r:Row Columns="2">
                <Label r:Row.OrderXs="1" r:Row.OrderSm="2" Text="Xs 1st, Sm Last"></Label>
                <Label r:Row.OrderXs="2" r:Row.OrderSm="1" Text="Hmm"></Label>
            </r:Row>
        </r:Container>
    </ScrollView>
</ContentPage>
